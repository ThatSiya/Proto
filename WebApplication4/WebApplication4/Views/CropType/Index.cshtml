@model IEnumerable<WebApplication4.Models.CropType>

@{
    ViewBag.Title = "Crop Types";
}

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Crop</a></li>
    <li class="active">Crop Types</li>
</ol>

<div class="well">
    <div class="row">

        <div class="col-xs-6 col-md-2">
            @using (Html.BeginForm("Create", "CropType", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="input-group">
                    <div class="input-group-btn">
                        <button class="btn btn-success" type="submit">
                            <span class="glyphicon glyphicon-plus"></span>
                            Add Crop Type
                        </button>
                    </div>
                </div>
            }
        </div>
        <div class="col-xs-6 col-md-4">
            @using (Html.BeginForm("Index", "CropType", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="input-group">
                    <span>@Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Enter search keyword or phrase" })</span>
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>
                <span style="color:green;">@Html.DisplayNameFor(model => model.CropTypeDescr)</span>
            </th>
            <th>
                <span style="color:green;">@Html.DisplayNameFor(model => model.MaturityDays)</span>
            </th>
            <th>
                <span style="color:green;">Actions</span>
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CropTypeDescr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaturityDays)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.CropTypeID})" data-toggle="tooltip" title="Edit">
                    <i class="glyphicon glyphicon-pencil"></i>
                    <span class="sr-only">Edit</span>
                </a>
                <a href="@Url.Action("Details", new { id = item.CropTypeID })" data-toggle="tooltip" title="Details">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                    <span class="sr-only">Details</span>
                </a>
                <a href="@Url.Action("Delete", new { id = item.CropTypeID })" data-toggle="tooltip" title="Delete">
                    <i class="glyphicon glyphicon-trash"></i>
                    <span class="sr-only">Details</span>
                </a>
            </td>
        </tr>
    }

</table>
