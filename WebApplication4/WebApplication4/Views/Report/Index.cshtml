@model WebApplication4.Models.FarmWorker
@{
    ViewBag.Title = "Index";
}
<style>
    /* Set height of the grid so .sidenav can be 100% (adjust if needed) */
    .row.content {
        max-height: 1200px;
    }

    /* Set gray background color and 100% height */
    .sidenav {
        background-color: #f1f1f1;
        height: 80%;
    }

    #buttonGenerate {
        position: relative;
        margin-top: 100px;
        margin-bottom: 20px;
        margin-left: 11%;
    }
    /* Set black background color, white text and some padding */
    /*footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }*/

    /* On small screens, set height to 'auto' for sidenav and grid */
        #Textbox
    { 
        border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }
</style>
<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Admin</a></li>
    <li>@Html.ActionLink("Reports Action Page", "Index", "Report")</li>
    <li class="active">Generate Harvest Report</li>
</ol>
<hr />
<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-3 sidenav">
            <h4>Actions</h4>
            <hr id="greenHR">
            <br />
            <br />

            <div class="row">
                <div class="form-group">
                    <div class="col-xs-6 col-md-4" style="padding-top:8px; color:#0288d1;">
                        @Html.Label("Farm:", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-xs-6 col-md-9">
                        @Html.DropDownList("FarmID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-xs-6 col-md-4" style="padding-top:8px; color:#0288d1;">
                        @Html.Label("CropCycle:", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-xs-6 col-md-9">
                        @Html.DropDownList("FarmID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title" style="color:black;">
                                @*<span>
                                        &nbsp;
                                        <i class="glyphicon glyphicon-file"></i>
                                    </span>*@
                                <b>Harvest Classification</b>
                            </h3>
                        </div>
                        <div class="panel-body">

                            <div class="row">
                                <div class="col-xs-6">
                            <p><b>High Yield</b></p>
                                    </div>
                                <div class="col-xs-4" style="margin-left:-22px">
                                <span class="glyphicon glyphicon-leaf" style="color:green;"></span>
                                    </div>
                                </div>
                            <div class="row">
                                <div class="col-xs-3" style="padding-top:8px;"><p>Above:</p></div>
                                <div class="col-sm-7">
                                    <input type="text" style="text-align:center;width:80px; padding-top:10px; border-radius:4px; border: 1px solid #ccc;">
                                    @*@Html.EditorFor(model => model.FarmWorkerFName, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @Html.ValidationMessageFor(model => model.FarmWorkerFName, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-xs-2" style="padding-top:8px; margin-left:-25px;"><p>t/Ha</p></div>

                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-xs-8">
                                    <p><b>Meduim Yield</b></p>
                                </div>
                                <div class="col-xs-4" style="margin-left:-32px;">
                                    <span class="glyphicon glyphicon-leaf" style="color:orange;"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4" style="padding-top:8px;"><p>Between:</p></div>
                                <div class="col-sm-3">
                                    <input type="text" style="text-align:center;width:28px;padding-top:10px;border-radius:4px; border: 1px solid #ccc;">
                                </div>
                                <div class="col-xs-2" style="padding-top:8px; margin-left:-17px;">
                                    <p>&</p>
                                </div>
                                <div class="col-sm-3" style="margin-left:-16px;">
                                    <input type="text" style="text-align:center;width:28px;padding-top:10px;border-radius:4px; border: 1px solid #ccc;">
                                </div>
                                <div class="col-xs-2" style="padding-top:8px; margin-left:-18px;"><p>t/Ha</p></div>

                            </div>
                            <hr />


                            <div class="row">
                                <div class="col-xs-6">
                                    <p><b>Low Yield</b></p>
                                </div>
                                <div class="col-xs-6" style="margin-left:-25px">
                                    <span class="glyphicon glyphicon-leaf" style="color:#FFDF00;"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4" style="padding-top:8px;"><p>Between:</p></div>
                                <div class="col-sm-3">
                                    <input type="text" style="text-align:center;width:28px;padding-top:10px;border-radius:4px; border: 1px solid #ccc;">
                                </div>
                                <div class="col-xs-2" style="padding-top:8px; margin-left:-17px;">
                                    <p>&</p>
                                </div>
                                <div class="col-sm-3" style="margin-left:-16px;">
                                    <input type="text" style="text-align:center;width:28px;padding-top:10px;border-radius:4px; border: 1px solid #ccc;">
                                </div>
                                <div class="col-xs-2" style="padding-top:8px; margin-left:-18px;"><p>t/Ha</p></div>

                            </div>
                            <hr />


                            <div class="row">
                                <div class="col-xs-10">
                                    <p><b>Uneconomical Yield</b></p>
                                </div>
                                <div class="col-xs-2" style="margin-left:-24px">
                                    <span class="glyphicon glyphicon-leaf" style="color:red;"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3" style="padding-top:8px;"><p>Below:</p></div>
                                <div class="col-sm-9">
                                    <input type="text" style="text-align:center;width:90px;padding-top:10px;border-radius:4px; border: 1px solid #ccc;">
                                </div>
                                <div class="col-xs-2" style="padding-top:8px; margin-left:-54px;"><p>t/Ha</p></div>

                            </div>
                            <hr />

                            <div class="progress">
                                <div class="progress-bar progress-bar-danger" style="width: 25%;">
                                    <p style="color:black">0-3</p>
                                    <span class="sr-only">25% Complete (danger)</span>
                                </div>
                                <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: 25%;">
                                    <p style="color:black">4-5</p>
                                    <span class="sr-only">25% Complete (warning)</span>
                                </div>
                                <div class="progress-bar" style="width: 25%; background-color:#fffd00;">
                                    <p style="color:black">6-7</p>
                                    <span class="sr-only">25% Complete</span>
                                </div>
                                <div class="progress-bar progress-bar-success" style="width: 25%;">
                                    <p style="color:black">8+</p>
                                    <span class="sr-only">25% Complete (success)</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <span class="input-group-btn">
                <button class="btn btn-primary btn-group-lg" type="button" id="buttonGenerate">
                    Generate Report
                    <span class="glyphicon glyphicon-share-alt"></span>
                </button>
            </span><br>
            <div class="row" style="align-content:center">
                <div class="col-sm-6 text-center" style="margin-left:20%;">
                    <img src="~/Images/acrobat.png" height="35" width="35" alt="Avatar">
                    <img src="~/Images/excel.png" height="35" width="35" alt="Avatar">
                </div>
                <br />
                <p>
                    &nbsp;
                </p>
                <br />
                @*<div class="col-sm-3 text-center" style="margin-left:11%;">

                    </div>*@
            </div>
        </div>

        <div class="col-sm-9">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title" style="color:black;">
                        <span>
                            &nbsp;
                            <i class="glyphicon glyphicon-file"></i>
                        </span>
                        <b>View Report</b>
                    </h3>
                </div>
                <div class="panel-body" style="height:1038px;">
                    @*@Html.ReportViewer(
                            ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer,
                        new { scrolling = "yes" })*@
                </div>
            </div>
        </div>
    </div>
</div>

@*<footer class="container-fluid">
        <p>Footer Text</p>
    </footer>*@
