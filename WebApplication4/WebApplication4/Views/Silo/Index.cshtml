@model IEnumerable<WebApplication4.Models.Silo>

@{
    ViewBag.Title = "Index";
}

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Farm</a></li>
    <li class="active">Silo</li>
</ol>

<div class="well">
    <div class="row">

        <div class="col-xs-6 col-md-2">
            @using (Html.BeginForm("Create", "Silo", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="input-group">
                    <div class="input-group-btn">
                        <button class="btn btn-success" type="submit">
                            <span class="glyphicon glyphicon-plus"></span>
                            Add Silo
                        </button>
                    </div>
                </div>
            }
        </div>
        <div class="col-xs-6 col-md-4">
            @using (Html.BeginForm("CreateHarvestSale", "Silo", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="input-group">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-leaf"></span>
                            Capture Harvest Sale
                        </button>
                    </div>
                </div>
            }
        </div>
        <div class="col-xs-6 col-md-4">
            @using (Html.BeginForm("Index", "Silo", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="input-group">
                    <span>@Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Enter search keyword or phrase" })</span>
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<table class="table table-striped table-condensed">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SiloDescr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiloCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiloRentalFeePA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiloStatus)
        </th>
        <th></th>
    </tr>
</thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SiloDescr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiloCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiloRentalFeePA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiloStatus)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.SiloID})" data-toggle="tooltip" title="Edit">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a>
            <a href="@Url.Action("Details", new { id = item.SiloID })" data-toggle="tooltip" title="Details">
                <i class="glyphicon glyphicon-zoom-in"></i>
                <span class="sr-only">Details</span>
            </a>
            <a href="@Url.Action("Delete", new { id = item.SiloID })" data-toggle="tooltip" title="Delete">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Details</span>
            </a>
        </td>
    </tr>
}

</table>
