@model WebApplication4.Models.UserAccessLevel

@{
    ViewBag.Title = "Update User Access Role";
}

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Admin</a></li>
    <li><a href="#">Users</a></li>
    <li>@Html.ActionLink("Manage User Access Roles", "Index", "User")</li>
    <li class="active">Update User Access Role</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserAccessLevelID)
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title" style="color:black;"><b>Update User Access Role Details</b></h3>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-xs-6 col-md-2">
                        @Html.LabelFor(model => model.UserAccessLevelDescr, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-xs-6 col-md-6">
                        @Html.EditorFor(model => model.UserAccessLevelDescr, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserAccessLevelDescr, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-6 col-md-2">
                        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-xs-6 col-md-6">
                        @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="input-group">
        <div class="input-group-btn">
            <button class="btn btn-success" type="submit" id="btnSave" @*style="float:right"*@>
                <span class="glyphicon glyphicon-bookmark"></span>
                Save
            </button>
        </div>
    </div>
}

<div class="col-xs-6 col-md-6">
    @using (Html.BeginForm("Index", "UserAccessLevel", FormMethod.Get, new { @class = "form-inline" }))
    {
        <div class=input-group>
            <div class="input-group-btn">
                <button class="btn btn-success" type="submit" id="btnBack" @*id="btnBack"*@>
                    <span class="glyphicon glyphicon-arrow-left"></span>
                    Back to List
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}