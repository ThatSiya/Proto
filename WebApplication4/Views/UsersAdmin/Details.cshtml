@model WebApplication4.Models.ApplicationUser

@{
    ViewBag.Title = "User Details";
}

<h2>@ViewBag.Title</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.UserFName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserFName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.UserLName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserLName) <br>
            </dd>
        @Html.DisplayFor(model  => model.User)
    </dl>
</div>
<div class="container">
    <div class="row">
        <h4>Roles this user belongs to:</h4>
    </div>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <p>No roles found for this user</p>
    }
    @foreach (var item in ViewBag.RoleNames)
    {
        <div class="row">
            @item
        </div>
    }
</div>
<p>
    @Html.ActionLink("Edit","Edit",new { id = Model.Id}) |
    @Html.ActionLink("Back to List", "Index")
</p>

