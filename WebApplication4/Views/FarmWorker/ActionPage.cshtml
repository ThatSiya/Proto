
@{
    ViewBag.Title = "Farm Workers - Action Page";
}
<style>
    .btn {
        margin-top: 10px !important;
        font-weight: 600;
        display: inline-block;
    }

    .card {
        text-align: center;
        background-color: #99cfec;
        padding: 20px;
        max-width: 300px;
        min-width: 300px;
        margin: 0 auto;
        margin-top: 10px;
        border-radius: 5%;
    }

    #cardRight {
        margin: 0 auto;
        margin-top: 10px;
    }

    }
</style>
<p style="text-align: center"><span class="glyphicon glyphicon-th-large" style="font-size: 3em"></span></p>
<hr id="greenHR" />
<hr id="blueHR" style="margin-bottom: 10px; padding-bottom: 0" />
<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Images/Farm Worker - Transparent.png" alt="Farm Workers">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text"></p>
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-success btn-lg" style="margin-top: 20px;">
                    <span class="glyphicon glyphicon-new-window"></span> Manage Workers
                </button>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6">
        <div class="card" style="width: 18rem;" id="cardRight">
            <img class="card-img-top" src="~/Images/Farm Worker - Circle.png" alt="Farm Worker Types">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text"></p>
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-success btn-lg">
                    <span class="glyphicon glyphicon-new-window"></span> Manage Worker Types
                </button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="card" style="width: 18rem; margin-top: 20px;">
            <img class="card-img-top" src="~/Images/Farm Worker - Round Corner.png" alt="Clock In">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text"></p>
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-success btn-lg" style="margin-top: 20px;">
                    <span class="glyphicon glyphicon-new-window"></span> Clock-In
                </button>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6">
        <div class="card" style="width: 18rem; margin-top: 20px;" id="cardRight">
            <img class="card-img-top" src="~/Images/Farm Worker - Square.jpg"Clock Out">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text"></p>
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-success btn-lg">
                    <span class="glyphicon glyphicon-new-window"></span> Clock-Out
                </button>
            </div>
        </div>
    </div>
</div>

